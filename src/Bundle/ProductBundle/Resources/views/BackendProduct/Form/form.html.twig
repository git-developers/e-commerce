{% extends 'GridBundle::Template/crud_modal_content.html.twig' %}

{% block crud_modal_content %}

    {% if id is defined %}
        <input type="hidden" value="{{ id }}" name="id">
    {% endif %}

    {{ form_widget(form._token) }}

    <div style="display: none">
        {{ form_widget(form.category) }}
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-qrcode"></i>
                {{ form_label(form.unit) }}
                {{ form_widget(form.unit) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-tag"></i>
                {{ form_label(form.brand) }}
                {{ form_widget(form.brand) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-qrcode"></i>
                {{ form_label(form.code) }}
                {{ form_widget(form.code) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-code"></i>
                {{ form_label(form.stock) }}
                {{ form_widget(form.stock) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-align-left"></i>
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-adjust"></i>
                {{ form_label(form.color) }}
                {{ form_widget(form.color) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-align-left"></i>
                {{ form_label(form.descriptionShort) }}
                {{ form_widget(form.descriptionShort) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-square"></i>
                {{ form_label(form.model) }}
                {{ form_widget(form.model) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <i class="fa fa-fw fa-align-left"></i>
                {{ form_label(form.descriptionLong) }}
                {{ form_widget(form.descriptionLong) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-star"></i>
                {{ form_label(form.isFeatured) }}
                {{ form_widget(form.isFeatured) }}
            </div>
        </div>
    </div>

{% endblock %}